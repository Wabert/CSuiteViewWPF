<Window x:Class="CSuiteViewWPF.TemplateCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Template Creator" Height="320" Width="420" WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title for the new template window -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Title:" VerticalAlignment="Center" Width="120" />
            <TextBox x:Name="TitleBox" Width="240" Text="ANICO DATABASE MANAGER" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="HeaderHeight:" VerticalAlignment="Center" Width="120" />
            <TextBox x:Name="HeaderHeightBox" Width="120" Text="48" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="FooterHeight:" VerticalAlignment="Center" Width="120" />
            <TextBox x:Name="FooterHeightBox" Width="120" Text="36" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="PanelCount:" VerticalAlignment="Center" Width="120" />
            <TextBox x:Name="PanelCountBox" Width="120" Text="3" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,8">
            <TextBlock Text="SpaceAbove (px):" VerticalAlignment="Center" Width="120" />
            <TextBox x:Name="SpaceAboveBox" Width="120" Text="12" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,0,0,8">
            <TextBlock Text="SpaceBelow (px):" VerticalAlignment="Center" Width="120" />
            <TextBox x:Name="SpaceBelowBox" Width="120" Text="18" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,0,0,8">
            <CheckBox x:Name="LeftTreeCheck" Content="Tree in left panel" VerticalAlignment="Center" />
            <CheckBox x:Name="FooterVisibleCheck" Content="Show footer" IsChecked="True" Margin="12,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Right">
            <Button Content="Create" Width="100" Click="CreateButton_Click" />
            <Button Content="Create (no panels, no footer)" Width="200" Click="CreateNoPanelsNoFooter_Click" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>

</Window>
