<UserControl x:Class="CSuiteViewWPF.Views.DirectoryScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:CSuiteViewWPF.Controls">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/BrushResources.xaml"/>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Input Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkBlue}" 
                BorderBrush="{StaticResource GoldBrush}" 
                BorderThickness="2" 
                CornerRadius="6" 
                Padding="10"
                Margin="10,10,10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Folder Path:" 
                           VerticalAlignment="Center" 
                           Foreground="White" 
                           FontWeight="Bold"
                           Margin="0,0,10,0"/>
                
                <Button Grid.Column="1" 
                        x:Name="BrowseButton"
                        Content="Browse..." 
                        Click="BrowseButton_Click"
                        Style="{StaticResource RoundedBrassButtonStyle}"
                        Width="90"
                        Height="30"
                        FontSize="14"
                        Margin="0,0,10,0"/>
                
                <TextBox Grid.Column="2" 
                         x:Name="FolderPathTextBox"
                         Height="30" 
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Margin="0,0,10,0"/>
                
                <Button Grid.Column="3" 
                        x:Name="ScanButton"
                        Content="Scan" 
                        Click="ScanButton_Click"
                        Style="{StaticResource RoundedBrassButtonStyle}"
                        Width="80"
                        Height="30"
                        FontSize="14"
                        Margin="0,0,10,0"/>
                
                <Button Grid.Column="4" 
                        x:Name="StopButton"
                        Content="Stop Scan" 
                        Click="StopButton_Click"
                        Style="{StaticResource DarkBlueGoldButton}"
                        Width="100"
                        Height="30"
                        FontSize="14"
                        IsEnabled="False"/>
            </Grid>
        </Border>
        
        <!-- DataGrid Section -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="{StaticResource GoldBrush}" 
                BorderThickness="2" 
                CornerRadius="6"
                Margin="10,5,10,10">
            <controls:FilteredDataGridControl x:Name="FileSystemDataGrid"/>
        </Border>

        <!-- Local status text replaces footer dependency -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   Margin="12,0,12,8"
                   Foreground="{DynamicResource GoldBrush}"
                   Text="Ready"/>
    </Grid>
</UserControl>
