<Window x:Class="CSuiteViewWPF.Windows.StyledContentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    xmlns:local="clr-namespace:CSuiteViewWPF.Controls"
    Title="Styled Content Window" Height="600" Width="900"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="False" Background="{DynamicResource GoldBrush}">

    <!-- Use WindowChrome to remove the OS caption while preserving resize behavior -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="6" GlassFrameThickness="0" UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/BrushResources.xaml"/>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- These are kept for backward compatibility but should use the merged resources -->
            <SolidColorBrush x:Key="MediumBlue" Color="#4169E1" />

        <!-- Header/footer gradients (3-stop) -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#18325F" Offset="0.0" />
            <GradientStop Color="#2C5AA0" Offset="0.5" />
            <GradientStop Color="#18325F" Offset="1.0" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="FooterGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#18325F" Offset="0.0" />
            <GradientStop Color="#2C5AA0" Offset="0.5" />
            <GradientStop Color="#18325F" Offset="1.0" />
        </LinearGradientBrush>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Outer gold frame with 5-row grid inside -->
    <Border BorderBrush="{StaticResource GoldBrush}" 
            BorderThickness="4" 
            CornerRadius="8" 
            Background="{StaticResource MediumBlue}" 
            Padding="0">
        
        <Grid x:Name="MainContentGrid" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="48" /> <!-- header -->
                <RowDefinition Height=".5" />  <!-- header fine gold line -->
                <RowDefinition Height="*" />  <!-- middle -->
                <RowDefinition Height=".5" />  <!-- footer fine gold line -->
                <RowDefinition Height="36" /> <!-- footer -->
            </Grid.RowDefinitions>
            
            <Border x:Name="HeaderBorder" Grid.Row="0" Background="{StaticResource HeaderGradient}" CornerRadius="4" Margin="0" Padding="1">
                <Grid x:Name="HeaderBar">
                    <TextBlock x:Name="HeaderTitleTextBlock" Text="Header Title" Foreground="{StaticResource GoldBrush}" VerticalAlignment="Center" Margin="12,0" FontWeight="Bold" FontSize="20" />

                    <!-- Custom close button in top-right -->
                    <Button x:Name="CloseButton" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,8,0" 
                            Click="CloseButton_Click"
                            Style="{StaticResource GoldCircleCloseButton}" />
                </Grid>
            </Border>

            <!-- thin gold line under header -->
            <Border Grid.Row="1" Background="{StaticResource GoldBrush}" Height="2" HorizontalAlignment="Stretch" />

            <!-- Middle content area - empty by default, can be populated in code -->
            <Border x:Name="MiddleBorder" Grid.Row="2" Background="{StaticResource MediumBlue}" CornerRadius="4" Padding="12,18">
                <!-- Content will be added dynamically -->
            </Border>

            <!-- thin gold line above footer -->
            <Border Grid.Row="3" Background="{StaticResource GoldBrush}" Height="2" HorizontalAlignment="Stretch" />

            <Border x:Name="FooterBar" Grid.Row="4" Background="{StaticResource FooterGradient}" CornerRadius="4">
                <TextBlock Text="Footer" Foreground="{StaticResource GoldBrush}" VerticalAlignment="Center" Margin="12,0" />
            </Border>
        </Grid>
    </Border>

</Window>