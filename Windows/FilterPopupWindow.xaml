<Window x:Class="CSuiteViewWPF.Windows.FilterPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter" Height="400" Width="250" 
        WindowStyle="None" 
        ResizeMode="CanResizeWithGrip" 
        ShowInTaskbar="False" 
        Topmost="True" 
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <SolidColorBrush x:Key="DarkBlue" Color="#27408B"/>
    </Window.Resources>
    <Border BorderBrush="Gold" BorderThickness="3" CornerRadius="8" Background="{StaticResource LightBlue}">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Custom title bar with rounded top corners -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SecondaryBrush}" 
                    Margin="-8,-8,-8,0" 
                    Height="30"
                    CornerRadius="5,5,0,0">
                <Grid>
                    <TextBlock x:Name="TitleText" 
                               Text="Filter" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="13"
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"/>
                    <Button Content="âœ•" 
                            Width="22" 
                            Height="22" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,8,0" 
                            Padding="0" 
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="White"
                            Click="CloseButton_Click" 
                            FontWeight="Bold" 
                            FontSize="14" 
                            Cursor="Hand"/>
                </Grid>
            </Border>
            
            <Border x:Name="ContentContainer" Grid.Row="1" Margin="0,10,0,0"/>
        </Grid>
    </Border>
</Window>
