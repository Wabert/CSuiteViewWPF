<Window x:Class="CSuiteViewWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:vm="clr-namespace:CSuiteViewWPF.ViewModels"
        Title="ANICO Database Manager" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="False" 
        Background="{DynamicResource GoldBrush}">

    <!-- Set DataContext to MainWindowViewModel -->
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <!-- Use WindowChrome to remove the OS caption while preserving resize behavior -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="6" GlassFrameThickness="0" UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ControlTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="GoldBrush" Color="#FFD700" />
            <SolidColorBrush x:Key="MediumBlue" Color="#4169E1" />
            <SolidColorBrush x:Key="DarkBlue" Color="#27408B" />

            <!-- Header gradient -->
            <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#18325F" Offset="0.0" />
                <GradientStop Color="#2C5AA0" Offset="0.5" />
                <GradientStop Color="#18325F" Offset="1.0" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Outer gold frame -->
        <Border BorderBrush="{StaticResource GoldBrush}" BorderThickness="4" CornerRadius="8" 
                Background="{StaticResource MediumBlue}" Padding="0">

            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" /> <!-- header -->
                    <RowDefinition Height="2" />  <!-- gold line -->
                    <RowDefinition Height="*" />  <!-- middle content -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border x:Name="HeaderBorder" Grid.Row="0" Background="{StaticResource HeaderGradient}" CornerRadius="4" 
                        Margin="0" Padding="1">
                    <Grid>
                        <TextBlock Text="SUITE VEIW" 
                                   Foreground="{StaticResource GoldBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="12,0" 
                                   FontWeight="Bold" 
                                   FontSize="20" />

                        <!-- Custom close button in top-right -->
                        <Button HorizontalAlignment="Right" 
                                VerticalAlignment="Center" 
                                Margin="0,0,8,0" 
                                Click="CloseButton_Click"
                                Style="{StaticResource GoldCircleCloseButton}" />
                    </Grid>
                </Border>

                <!-- Gold line -->
                <Border Grid.Row="1" Background="{StaticResource GoldBrush}" />

                <!-- Middle content area with three buttons -->
                <Border x:Name="ContentBorder" Grid.Row="2" Background="{StaticResource MediumBlue}" 
                        CornerRadius="4" Padding="12,18">
                    <StackPanel Orientation="Vertical" 
                                Margin="12,12,0,0" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left">

                        <!-- Screenshot Button (Brass style) -->
                        <Button Content="Screen shot" 
                                Width="180" 
                                Height="30" 
                                Margin="0,6,0,6" 
                                HorizontalAlignment="Left"
                                Style="{DynamicResource RoundedBrassButtonStyle}"
                                Command="{Binding ScreenshotCommand}" />

                        <!-- Directory Scan Button (Dark Blue/Gold style) -->
                        <Button Content="Directory Scan" 
                                Width="180" 
                                Height="30" 
                                Margin="0,6,0,6" 
                                HorizontalAlignment="Left"
                                Style="{DynamicResource DarkBlueGoldButton}"
                                Command="{Binding DirectoryScanCommand}" />

                        <!-- Test Windows Button (Silver style) -->
                        <Button Content="Test Windows" 
                                Width="180" 
                                Height="30" 
                                Margin="0,6,0,6" 
                                HorizontalAlignment="Left"
                                Style="{DynamicResource RoundedSilverButtonStyle}"
                                Command="{Binding TestWindowsCommand}" />

                    </StackPanel>
                </Border>

            </Grid>

        </Border>
    </DockPanel>

</Window>
