<views:StyleWindow x:Class="CSuiteViewWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CSuiteViewWPF.ViewModels"
        xmlns:views="clr-namespace:CSuiteViewWPF.Views"
        Title="SUITE VIEW" 
        Height="300" 
        Width="420"
        WindowStartupLocation="CenterScreen">

    <!-- StyleWindow.BaseStyle applies WindowChrome and template -->

    <!-- Set DataContext to MainWindowViewModel -->
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <!-- Use new base template (content goes into ContentPresenter) -->
    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="16"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button Content="Directory Scan"
                    Width="200"
                    Height="36"
                    Style="{DynamicResource DarkBlueGoldButton}"
                    Command="{Binding DirectoryScanCommand}"/>
        </StackPanel>
    </Grid>

</views:StyleWindow>
