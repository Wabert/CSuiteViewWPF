<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Royal Classic Theme Colors -->
    <Color x:Key="PrimaryColor">#2C5AA0</Color>
    <Color x:Key="SecondaryColor">#4169E1</Color>
    <Color x:Key="AccentColor">#FFD700</Color>
    <Color x:Key="LightBlueColor">#60a0ff</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextOnSecondaryColor">#D4AF37</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlueColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="TextOnSecondaryBrush" Color="{StaticResource TextOnSecondaryColor}"/>
    
    <!-- Lustrous Gold Button Style with Polished 3D Bubble Effect -->
    <Style x:Key="RoundedBrassButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1">
                            <!-- Fine polished gold gradient with enhanced depth -->
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFFEF5" Offset="0"/>
                                    <GradientStop Color="#FFF8C8" Offset="0.15"/>
                                    <GradientStop Color="#FFED6F" Offset="0.35"/>
                                    <GradientStop Color="#FFD700" Offset="0.5"/>
                                    <GradientStop Color="#E8C400" Offset="0.65"/>
                                    <GradientStop Color="#D4AF37" Offset="0.85"/>
                                    <GradientStop Color="#C09A20" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            
                            <!-- Subtle border for polish -->
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#40000000" Offset="0"/>
                                    <GradientStop Color="#20FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#40000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            
                            <Grid>
                                <!-- Reduced 3D bubble/convex shine overlay -->
                                <Border CornerRadius="14" Margin="0">
                                    <Border.Background>
                                        <RadialGradientBrush Center="0.5,0.25" RadiusX="0.7" RadiusY="0.5">
                                            <GradientStop Color="#40FFFFFF" Offset="0"/>
                                            <GradientStop Color="#20FFFFFF" Offset="0.3"/>
                                            <GradientStop Color="Transparent" Offset="0.6"/>
                                            <GradientStop Color="#08000000" Offset="0.9"/>
                                            <GradientStop Color="#10000000" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                </Border>
                                
                                <!-- Subtle specular highlight for polished look -->
                                <Ellipse Width="50" Height="15" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Top"
                                        Margin="0,2,0,0"
                                        Opacity="0.4">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#60FFFFFF" Offset="0"/>
                                            <GradientStop Color="#30FFFFFF" Offset="0.5"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"
                                                TextBlock.TextAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                        <GradientStop Color="#FFFED8" Offset="0.15"/>
                                        <GradientStop Color="#FFF490" Offset="0.35"/>
                                        <GradientStop Color="#FFE45C" Offset="0.5"/>
                                        <GradientStop Color="#F5D000" Offset="0.65"/>
                                        <GradientStop Color="#E0C020" Offset="0.85"/>
                                        <GradientStop Color="#D0AA10" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#B8942A" Offset="0"/>
                                        <GradientStop Color="#C09A20" Offset="0.2"/>
                                        <GradientStop Color="#D4AF37" Offset="0.4"/>
                                        <GradientStop Color="#E8C400" Offset="0.6"/>
                                        <GradientStop Color="#D4AF37" Offset="0.8"/>
                                        <GradientStop Color="#C09A20" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
