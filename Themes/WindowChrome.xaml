<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CSuiteViewWPF.Views"
                    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework">

    <!-- Base Style for StyleWindow -->
    <Style x:Key="StyleWindow.BaseStyle" TargetType="views:StyleWindow">
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="views:StyleWindow">
                    <!-- Outer gold frame -->
                    <Border Background="{DynamicResource GoldBrush}"
                            BorderBrush="{DynamicResource GoldBrush}"
                            BorderThickness="5"
                            SnapsToDevicePixels="True">
                            <Grid SnapsToDevicePixels="True">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="48"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header with rounded top corners -->
                                <Border Grid.Row="0"
                                        Background="{DynamicResource DarkBlueGradient}"
                                        CornerRadius="6,6,0,0"
                                        ClipToBounds="True">
                                    <DockPanel x:Name="PART_Header">
                                        <StackPanel x:Name="PART_WindowButtons"
                                                    Orientation="Horizontal"
                                                    DockPanel.Dock="Right"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,10,10">
                                            <Button x:Name="CloseBtn"
                                                    Style="{DynamicResource GoldCircleCloseButton}"
                                                    Command="{x:Static ApplicationCommands.Close}"/>
                                        </StackPanel>

                                        <TextBlock Text="{TemplateBinding Title}"
                                                Margin="20,0,0,0"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource GoldBrush}"
                                                FontSize="20"
                                                FontWeight="Bold"/>
                                    </DockPanel>
                                </Border>

                                <!-- Gold hairline under header -->
                                <Rectangle Grid.Row="1"
                                        Height="1"
                                        Fill="{DynamicResource GoldBrush}"/>

                                <!-- Body with rounded bottom corners -->
                                <Border Grid.Row="2"
                                        Background="{DynamicResource MiddleBlue}"
                                        CornerRadius="0,0,6,6"
                                        ClipToBounds="True"
                                        Padding="{DynamicResource Thickness.Padding.M}">
                                    <ContentPresenter x:Name="PART_ContentHost"/>
                                </Border>

                                <!-- Footer placeholder -->
                                <Border Grid.Row="3" Height="0" Background="Transparent"/>
                            </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="views:StyleWindow.ShowHeaderButtons" Value="False">
                            <Setter TargetName="PART_WindowButtons" Property="UIElement.Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
