<mah:MetroWindow x:Class="CSuiteViewWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:CSuiteViewWPF"
        mc:Ignorable="d"
        Title="CSuite View" 
        Height="600" 
        Width="800"
        MinWidth="400"
        MinHeight="300"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{x:Null}"
        BorderThickness="0"
        BorderBrush="Transparent"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        TitleBarHeight="0"
        WindowTitleBrush="Transparent"
        NonActiveWindowTitleBrush="Transparent"
        WindowTransitionsEnabled="False"
        TitleCharacterCasing="Normal"
        TitleForeground="Transparent"
        ShowTitleBar="False">
    
    <mah:MetroWindow.Resources>
        <!-- Enhanced TreeViewItem Style with Icons and Hover Effects -->
        <Style x:Key="ModernTreeViewItem" TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="#2C5AA0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <!-- Item Header with Icon and Hover Effect -->
                            <Border x:Name="ItemBorder" 
                                    Grid.Row="0"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    CornerRadius="4"
                                    Padding="4,6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Expand/Collapse Toggle -->
                                    <ToggleButton x:Name="Expander" 
                                                  Grid.Column="0"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Width="16" Height="16"
                                                  Margin="0,0,4,0">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    Width="16" Height="16">
                                                                <Path x:Name="ExpandPath" 
                                                                      Fill="#2C5AA0" 
                                                                      HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"
                                                                      Data="M 0 0 L 4 4 L 0 8 Z"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="ExpandPath" Property="Data" Value="M 0 0 L 8 0 L 4 4 Z"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="ExpandPath" Property="Fill" Value="#FFD700"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    
                                    <!-- Icon based on level -->
                                    <TextBlock Grid.Column="1" 
                                               Text="📁" 
                                               FontSize="14" 
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- Item Text -->
                                    <ContentPresenter Grid.Column="2" 
                                                      ContentSource="Header"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- Child Items -->
                            <ItemsPresenter Grid.Row="1" 
                                            x:Name="ItemsHost"
                                            Margin="20,0,0,0"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E8F4FF"/>
                            </Trigger>
                            
                            <!-- Selected Effect -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#D0E8FF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            
                            <!-- Hide ItemsHost if not expanded -->
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            
                            <!-- Hide expander if no children -->
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </mah:MetroWindow.Resources>
    
    <!-- Gold Border Layer (Outer) -->
    <Border Background="#FFD700" Padding="8">
        
        <!-- Layer 1: Dark Blue (#2C5AA0) - Creates Header and Footer -->
        <Grid Background="#2C5AA0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>  <!-- Header space - draggable -->
                <RowDefinition Height="*"/>    <!-- Content area -->
                <RowDefinition Height="15"/>   <!-- Footer space - draggable -->
            </Grid.RowDefinitions>
            
            <!-- Layer 1 Header - Draggable with Close Button -->
            <Border Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <!-- Close Button (Yellow Circle with X) -->
                <Button x:Name="CloseButton"
                        Width="20" Height="20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFD700"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Width="20" Height="20">
                                            <!-- Yellow Circle -->
                                            <Ellipse Fill="{TemplateBinding Background}" 
                                                     Width="20" Height="20"/>
                                            <!-- X Symbol - Centered -->
                                            <Path Stretch="None"
                                                  Data="M 0,0 L 8,8 M 8,0 L 0,8" 
                                                  Stroke="#2C5AA0" 
                                                  StrokeThickness="2"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF200"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#E6C200"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
            
            <!-- Layer 1 Footer - Draggable -->
            <Border Grid.Row="2" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown"/>
            
            <!-- Layer 2 Container in Grid.Row="1" with vertical padding -->
            <Border Grid.Row="1" Padding="0,8,0,8">
                <Grid>
                    <!-- Fine golden line at TOP (where Layer 1 meets Layer 2) -->
                    <Border BorderBrush="#FFD700" BorderThickness="0,1,0,0" 
                            VerticalAlignment="Top" Height="1" Panel.ZIndex="10"/>
                    
                    <!-- Fine golden line at BOTTOM (where Layer 2 meets Layer 1) -->
                    <Border BorderBrush="#FFD700" BorderThickness="0,0,0,1" 
                            VerticalAlignment="Bottom" Height="1" Panel.ZIndex="10"/>
                    
                    <!-- Layer 2: Medium Blue (#4169E1) - Also has Header and Footer -->
                    <Grid Background="#4169E1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>  <!-- Layer 2 Header space -->
                            <RowDefinition Height="*"/>    <!-- Layer 2 Content area -->
                            <RowDefinition Height="15"/>   <!-- Layer 2 Footer space -->
                        </Grid.RowDefinitions>
                        
                        <!-- Layer 3: Light Blue Background with 3-Panel Splitter -->
                        <!-- Padding on left/right to reveal Layer 2 border -->
                        <Border Grid.Row="1" Padding="8,0,8,0">
                            <Grid Background="#8BB9F5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" MinWidth="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" MinWidth="100"/>
                                </Grid.ColumnDefinitions>
                        
                        <!-- Panel 1 (Left) - TreeView -->
                        <Border Grid.Column="0" Background="Transparent" Margin="4">
                            <TreeView x:Name="SampleTreeView" 
                                      BorderThickness="0"
                                      Background="#8BB9F5"
                                      Foreground="#2C5AA0"
                                      FontSize="12"
                                      Padding="8"
                                      ItemContainerStyle="{StaticResource ModernTreeViewItem}">
                            <TreeViewItem Header="Database Connections" IsExpanded="True">
                                <TreeViewItem Header="Production Server" IsExpanded="True">
                                    <TreeViewItem Header="Tables" IsExpanded="True">
                                        <TreeViewItem Header="Customers"/>
                                        <TreeViewItem Header="Orders"/>
                                        <TreeViewItem Header="Products"/>
                                        <TreeViewItem Header="Employees"/>
                                    </TreeViewItem>
                                    <TreeViewItem Header="Views">
                                        <TreeViewItem Header="CustomerOrders"/>
                                        <TreeViewItem Header="ProductSales"/>
                                    </TreeViewItem>
                                    <TreeViewItem Header="Stored Procedures">
                                        <TreeViewItem Header="GetCustomerOrders"/>
                                        <TreeViewItem Header="UpdateInventory"/>
                                        <TreeViewItem Header="ProcessPayment"/>
                                    </TreeViewItem>
                                </TreeViewItem>
                                <TreeViewItem Header="Development Server">
                                    <TreeViewItem Header="Tables">
                                        <TreeViewItem Header="TestData"/>
                                        <TreeViewItem Header="Staging"/>
                                    </TreeViewItem>
                                </TreeViewItem>
                                <TreeViewItem Header="Backup Server">
                                    <TreeViewItem Header="Archives">
                                        <TreeViewItem Header="2024_Q1"/>
                                        <TreeViewItem Header="2024_Q2"/>
                                        <TreeViewItem Header="2024_Q3"/>
                                    </TreeViewItem>
                                </TreeViewItem>
                            </TreeViewItem>
                            <TreeViewItem Header="File Systems" IsExpanded="False">
                                <TreeViewItem Header="Local Drive (C:)">
                                    <TreeViewItem Header="Program Files"/>
                                    <TreeViewItem Header="Users"/>
                                    <TreeViewItem Header="Windows"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Network Shares">
                                    <TreeViewItem Header="\\FileServer\Documents"/>
                                    <TreeViewItem Header="\\FileServer\Projects"/>
                                </TreeViewItem>
                            </TreeViewItem>
                            <TreeViewItem Header="Projects">
                                <TreeViewItem Header="CSuiteView">
                                    <TreeViewItem Header="Forms"/>
                                    <TreeViewItem Header="Models"/>
                                    <TreeViewItem Header="Managers"/>
                                </TreeViewItem>
                            </TreeViewItem>
                        </TreeView>
                    </Border>
                    
                    <!-- Splitter 1 -->
                    <GridSplitter Grid.Column="1" 
                                  Width="5" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Stretch"
                                  Background="#5B8DD6"
                                  ShowsPreview="False"/>
                    
                    <!-- Panel 2 (Middle) -->
                    <Border Grid.Column="2" Background="Transparent" Margin="4">
                        <TextBlock Text="Panel 2" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#2C5AA0"/>
                    </Border>
                    
                    <!-- Splitter 2 -->
                    <GridSplitter Grid.Column="3" 
                                  Width="5" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Stretch"
                                  Background="#5B8DD6"
                                  ShowsPreview="False"/>
                    
                    <!-- Panel 3 (Right) -->
                    <Border Grid.Column="4" Background="Transparent" Margin="4">
                        <TextBlock Text="Panel 3" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#2C5AA0"/>
                    </Border>
                            </Grid>
                            <!-- End of Layer 3 Grid -->
                        </Border>
                        <!-- End of Border with horizontal padding -->
                        
                    </Grid>
                    <!-- End of Layer 2 Grid -->
                    
                </Grid>
                <!-- End of Grid container for golden lines -->
                
            </Border>
            <!-- End of Border with vertical padding -->
        
    </Grid>
    <!-- End of Layer 1 Grid -->
    
</Border>
<!-- End of Gold Border -->
<!-- End of Gold Border -->
    
</mah:MetroWindow>
