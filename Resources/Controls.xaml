<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Consolidated control styles entrypoint -->
  <ResourceDictionary.MergedDictionaries>
    <!-- Load control templates before styles that depend on them -->
  <ResourceDictionary Source="/Resources/ControlTemplates.xaml"/>
  <ResourceDictionary Source="/Resources/ControlTemplates.Button.xaml"/>
    <ResourceDictionary Source="/Resources/ControlTemplates.DataGrid.xaml"/>
    <ResourceDictionary Source="/Resources/ControlTemplates.TextBox.xaml"/>

    <!-- Styles -->
    <ResourceDictionary Source="/Resources/Styles.Button.xaml"/>
    <ResourceDictionary Source="/Resources/Styles.TextBox.xaml"/>
    <ResourceDictionary Source="/Resources/Styles.DataGrid.xaml"/>
  </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
