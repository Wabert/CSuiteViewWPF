<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Depends on BrushResources via theme merge (see Themes/Royal.xaml) -->
    <ResourceDictionary.MergedDictionaries>
        <!-- Ensure the template is available before this style -->
        <ResourceDictionary Source="/Resources/ControlTemplates.TextBox.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Themed TextBox matching app theme -->
    <Style x:Key="ThemedTextBox" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource DarkBlue}" />
        <Setter Property="Background" Value="{StaticResource TextBox.BackgroundBrush}" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkBlue}" />
        <Setter Property="Template" Value="{StaticResource ThemedTextBoxTemplate}" />
    </Style>

</ResourceDictionary>
