<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- DataGrid ColumnHeader template extracted for reuse -->
  <ControlTemplate x:Key="DataGridColumnHeader.Template" TargetType="DataGridColumnHeader">
    <Grid>
      <Border x:Name="headerBorder" Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"/>
      <!-- Full overlay ToggleButton for filter popup, disables sort -->
      <ToggleButton x:Name="HeaderFilterToggle" Background="Transparent" BorderThickness="0" Content=""
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.01" Focusable="False"
                    IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                    ClickMode="Press"/>
      <ContentPresenter Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
      <!-- Invisible but functional resize thumbs -->
      <Thumb x:Name="PART_LeftHeaderGripper" Width="4" HorizontalAlignment="Left" Style="{x:Null}" Cursor="SizeWE" Opacity="0" Background="Transparent"/>
      <Thumb x:Name="PART_RightHeaderGripper" Width="4" HorizontalAlignment="Right" Style="{x:Null}" Cursor="SizeWE" Opacity="0" Background="Transparent"/>
    </Grid>
    <ControlTemplate.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter TargetName="headerBorder" Property="Background" Value="#FFFBE8"/>
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>

</ResourceDictionary>
