<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BrushResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- DataGrid Header Style -->
    <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Foreground" Value="{StaticResource DarkBlue}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFF6E0" Offset="0.0" />
                    <GradientStop Color="#FFD24D" Offset="0.5" />
                    <GradientStop Color="#FFB800" Offset="1.0" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource DarkBlue}" />
        <Setter Property="BorderThickness" Value="0,0,1,1" />
        <!-- Reduce the resize thumb width for column resizing -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridColumnHeader">
                    <Grid>
                        <Border x:Name="headerBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"/>
                        <!-- Full overlay ToggleButton for filter popup, disables sort -->
                        <ToggleButton x:Name="HeaderFilterToggle" Background="Transparent" BorderThickness="0" Content="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.01" Focusable="False"
                                      IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      ClickMode="Press"/>
                        <ContentPresenter Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <!-- Invisible but functional resize thumbs -->
                        <Thumb x:Name="PART_LeftHeaderGripper" Width="4" HorizontalAlignment="Left" Style="{x:Null}" Cursor="SizeWE" Opacity="0" Background="Transparent"/>
                        <Thumb x:Name="PART_RightHeaderGripper" Width="4" HorizontalAlignment="Right" Style="{x:Null}" Cursor="SizeWE" Opacity="0" Background="Transparent"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="headerBorder" Property="Background" Value="#FFFBE8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Themed DataGrid Base Style -->
    <Style x:Key="ThemedDataGrid" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource PanelLight}"/>
        <Setter Property="RowBackground" Value="{StaticResource PanelLight}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource PanelLight}"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="RowHeight" Value="30"/>
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridHeaderStyle}"/>
    </Style>

    <!-- Filter Popup Border Style -->
    <Style x:Key="FilterPopupBorder" TargetType="Border">
        <Setter Property="Background" Value="#E6F2FF"/> <!-- Light blue -->
        <Setter Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,8,8,8"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

</ResourceDictionary>
