<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">
    
    <!-- Palette Colors (Royal classic) -->
    <Color x:Key="PrimaryColor">#2C5AA0</Color>
    <Color x:Key="SecondaryColor">#4169E1</Color>
    <Color x:Key="AccentColor">#FFD700</Color>
    <Color x:Key="LightBlueColor">#60a0ff</Color>
    <Color x:Key="PanelLightColor">#A7C9FF</Color>
    <Color x:Key="LightBlueFilterColor">#E6F2FF</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextOnSecondaryColor">#D4AF37</Color>

    <!-- Additional tokens -->
    <Color x:Key="ErrorBorderColor">#D32F2F</Color>
    <Color x:Key="TextBoxBackgroundTopColor">#FFFFFFFF</Color>
    <Color x:Key="TextBoxBackgroundMidColor">#F0F6FF</Color>
    <Color x:Key="TextBoxBackgroundBottomColor">#E6F0FF</Color>

    <!-- Canonical Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlueColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="TextOnSecondaryBrush" Color="{StaticResource TextOnSecondaryColor}"/>

    <!-- Convenience / legacy aliases for back-compat -->
    <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="MiddleBlueBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="DarkBlue" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="MiddleBlue" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="PanelLight" Color="{StaticResource PanelLightColor}"/>
    <SolidColorBrush x:Key="LightBlue" Color="{StaticResource LightBlueFilterColor}"/>
    <SolidColorBrush x:Key="SilverBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="ErrorBorder" Color="{StaticResource ErrorBorderColor}"/>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFF6E0" Offset="0.0" />
        <GradientStop Color="#FFD24D" Offset="0.5" />
        <GradientStop Color="#FFB800" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#4169E1" Offset="0.0" />
        <GradientStop Color="#4169E1" Offset="0.6" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BrassGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFE4A1" Offset="0.0" />
        <GradientStop Color="#F5CF76" Offset="0.15" />
        <GradientStop Color="#D6A94D" Offset="0.5" />
        <GradientStop Color="#C79A3A" Offset="0.85" />
        <GradientStop Color="#B8872B" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SilverGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F0F0F0" Offset="0.0" />
        <GradientStop Color="#D8D8D8" Offset="0.15" />
        <GradientStop Color="#C0C0C0" Offset="0.5" />
        <GradientStop Color="#A8A8A8" Offset="0.85" />
        <GradientStop Color="#909090" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkBlueGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#27408B" Offset="0.0" />
        <GradientStop Color="#1C2F6A" Offset="1.0" />
    </LinearGradientBrush>

    <!-- TextBox background reusable brush (optional) -->
    <LinearGradientBrush x:Key="TextBox.BackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource TextBoxBackgroundTopColor}" Offset="0.0" />
        <GradientStop Color="{StaticResource TextBoxBackgroundMidColor}" Offset="0.5" />
        <GradientStop Color="{StaticResource TextBoxBackgroundBottomColor}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Window chrome tokens (theme-overridable) -->
    <SolidColorBrush x:Key="WindowChrome.BorderBrush" Color="{StaticResource AccentColor}" />
    <Thickness x:Key="WindowChrome.BorderThickness">5</Thickness>

    <!-- Header -->
    <LinearGradientBrush x:Key="WindowChrome.HeaderBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#27408B" Offset="0.0" />
        <GradientStop Color="#1C2F6A" Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="WindowChrome.HeaderForegroundBrush" Color="{StaticResource AccentColor}" />
    <!-- GridLength required for RowDefinition.Height -->
    <GridLength x:Key="WindowChrome.HeaderHeight">48</GridLength>
    <CornerRadius x:Key="WindowChrome.HeaderCornerRadius">6,6,0,0</CornerRadius>
    <CornerRadius x:Key="WindowChrome.BodyCornerRadius">0,0,6,6</CornerRadius>

    <!-- Body & hairline -->
    <SolidColorBrush x:Key="WindowChrome.BodyBackgroundBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="WindowChrome.HairlineBrush" Color="{StaticResource AccentColor}" />

    <!-- Close button tokens -->
    <SolidColorBrush x:Key="WindowChrome.CloseButton.FillBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="WindowChrome.CloseButton.StrokeBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="WindowChrome.CloseButton.CrossBrush" Color="{StaticResource PrimaryColor}" />

</ResourceDictionary>
