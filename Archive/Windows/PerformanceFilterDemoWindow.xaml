<Window x:Class="CSuiteViewWPF.Windows.PerformanceFilterDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CSuiteViewWPF.Controls"
        Title="High-Performance Filter Demo - 300k+ Rows" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <SolidColorBrush x:Key="GoldBrush" Color="#FFD700"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#27408B"/>
        <SolidColorBrush x:Key="MiddleBlue" Color="#4169E1"/>
        <SolidColorBrush x:Key="LightBlue" Color="#A7C9FF"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBlue}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MiddleBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource GoldBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkBlue}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title and Description -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Style="{StaticResource HeaderTextStyle}" FontSize="24">
                ‚ö° High-Performance Filter Demo
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Foreground="#666" FontSize="13">
                This demo showcases the BitArray-based filtering system that can handle 300,000+ rows with sub-100ms filter updates.
                Generate test data, apply filters via column headers, and watch the performance metrics in real-time.
            </TextBlock>
        </StackPanel>
        
        <!-- Test Data Generation Controls -->
        <Border Grid.Row="1" 
                Background="{StaticResource LightBlue}" 
                BorderBrush="{StaticResource GoldBrush}" 
                BorderThickness="2" 
                CornerRadius="6" 
                Padding="16" 
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Style="{StaticResource HeaderTextStyle}">
                    1. Generate Test Data
                </TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Style="{StaticResource ButtonStyle}" 
                            Click="GenerateSmallData_Click">
                        Small (10k rows)
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}" 
                            Click="GenerateMediumData_Click">
                        Medium (100k rows)
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}" 
                            Click="GenerateLargeData_Click">
                        Large (300k rows)
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}" 
                            Click="GenerateXLData_Click">
                        Extra Large (500k rows)
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}" 
                            Background="#DC143C"
                            Click="ClearData_Click">
                        Clear All
                    </Button>
                </StackPanel>
                <TextBlock x:Name="LoadStatusText" 
                          FontSize="12" 
                          Foreground="#333"
                          FontStyle="Italic"/>
            </StackPanel>
        </Border>
        
        <!-- Performance Statistics -->
        <Border Grid.Row="2" 
                Background="#F0F8FF" 
                BorderBrush="{StaticResource DarkBlue}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="16" 
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" FontSize="14">
                        üìä Performance Metrics
                    </TextBlock>
                    <TextBlock x:Name="StatusText" 
                              FontSize="13" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource MiddleBlue}"/>
                    <TextBlock x:Name="PerformanceStatsText" 
                              FontSize="11" 
                              Foreground="#555"
                              FontFamily="Consolas"
                              Margin="0,8,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <Button Style="{StaticResource ButtonStyle}" 
                            Click="RunBenchmark_Click"
                            Margin="0">
                        üèÅ Run Benchmark
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}" 
                            Click="ShowPerformanceStats_Click"
                            Margin="0,8,0,0">
                        üìà View Stats
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- DataGrid with Filtering -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="{StaticResource GoldBrush}" 
                BorderThickness="3" 
                CornerRadius="6">
            <controls:FilteredDataGridControl x:Name="FilteredGrid"/>
        </Border>
        
        <!-- Instructions -->
        <Border Grid.Row="4" 
                Background="#FFFACD" 
                BorderBrush="{StaticResource GoldBrush}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="12" 
                Margin="0,16,0,0">
            <StackPanel>
                <TextBlock FontWeight="Bold" Foreground="{StaticResource DarkBlue}" Margin="0,0,0,4">
                    üí° How to Use:
                </TextBlock>
                <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#333">
                    1. Click a dataset size button to generate test data
                    2. Click any column header to open the filter dropdown
                    3. Select/deselect values to filter the data
                    4. Watch the performance metrics update in real-time
                    5. Try filtering multiple columns simultaneously
                    6. Run the benchmark to compare different dataset sizes
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
