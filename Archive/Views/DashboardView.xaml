<UserControl x:Class="CSuiteViewWPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Archived: Not used in streamlined app scope -->
    <Grid>
        <StackPanel>
            <TextBlock Text="Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
            <Border Background="{DynamicResource PanelLight}" Padding="12" CornerRadius="{DynamicResource CornerRadius.M}">
                <StackPanel>
                    <TextBlock Text="Welcome back"/>
                    <Button Content="Primary Action" Width="160" Margin="0,8,0,0" Style="{DynamicResource DarkBlueGoldButton}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
