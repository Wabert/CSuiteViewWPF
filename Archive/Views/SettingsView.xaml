<UserControl x:Class="CSuiteViewWPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton Content="Light" GroupName="Theme" IsChecked="True" Checked="Light_Checked"/>
            <RadioButton Content="Dark" GroupName="Theme" Checked="Dark_Checked" Margin="12,0,0,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
