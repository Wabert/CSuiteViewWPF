<Window x:Class="CSuiteViewWPF.SimpleBlueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleBlueWindow"
        Height="320" Width="520"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <!-- Outer rounded border with gold gradient stroke and light blue fill (thicker) -->
    <Border CornerRadius="16" BorderThickness="18" Padding="12" Background="#ADD8E6">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFD700" Offset="0.0" /> <!-- gold -->
                <GradientStop Color="#FFFFE07A" Offset="0.5" /> <!-- lighter gold -->
                <GradientStop Color="#FFB8860B" Offset="1.0" /> <!-- darker goldenrod -->
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <TextBlock Text="Simple Blue Form" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Foreground="Black"/>
        </Grid>
    </Border>

</Window>
