<UserControl x:Class="CSuiteViewWPF.Controls.FilterContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="200">
    <UserControl.Resources>
        <SolidColorBrush x:Key="DarkBlue" Color="#27408B"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top button row: Sort Ascending, Sort Descending, Clear Filter (left-justified, same size) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6" HorizontalAlignment="Left">
            <Button Content="↑" 
                    Command="{Binding SortAscendingCommand}" 
                    ToolTip="Sort Ascending"
                    Style="{StaticResource LightBlueButtonStyle}"
                    Width="60"
                    Margin="0,0,4,0"/>
            <Button Content="↓" 
                    Command="{Binding SortDescendingCommand}" 
                    ToolTip="Sort Descending"
                    Style="{StaticResource LightBlueButtonStyle}"
                    Width="60"
                    Margin="0,0,4,0"/>
            <Button Content="Clear" 
                    Command="{Binding ClearFilterCommand}" 
                    ToolTip="Clear Filter"
                    Style="{StaticResource LightBlueButtonStyle}"
                    Width="60"/>
        </StackPanel>
        
        <TextBox Grid.Row="1"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,6"
                 Padding="4"
                 BorderBrush="{StaticResource DarkBlue}"
                 BorderThickness="1">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Foreground" Value="Black"/>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                        <VisualBrush.Visual>
                                            <TextBlock Text="Search..." Foreground="Gray" Margin="4,0,0,0"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,6">
            <Button Content="Select All" 
                    Command="{Binding SelectAllCommand}" 
                    Margin="0,0,6,0"
                    Padding="8,4"/>
            <Button Content="Deselect All" 
                    Command="{Binding DeselectAllCommand}"
                    Padding="8,4"/>
        </StackPanel>
        
        <!-- ListBox with * height to fill available space -->
        <ListBox Grid.Row="3"
                 ItemsSource="{Binding FilterItemsView}" 
                 BorderBrush="{StaticResource DarkBlue}"
                 BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding IsSelected}" 
                              Content="{Binding DisplayValue}" 
                              Margin="4,2"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- OK and Cancel buttons (same size) -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" 
                    Command="{Binding OkCommand}" 
                    Margin="0,0,6,0"
                    IsDefault="True"
                    Style="{StaticResource LightBlueButtonStyle}"
                    Width="80"
                    Padding="8,6"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource LightBlueButtonStyle}"
                    Width="80"
                    Padding="8,6"/>
        </StackPanel>
    </Grid>
</UserControl>
